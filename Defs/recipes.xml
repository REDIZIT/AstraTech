<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--==================== Astra blueprint ====================-->

	<RecipeDef>
		<defName>astra_create_blueprint</defName>
		<label>Create astra blueprint</label>
		<description>desc</description>
		<jobString>Creating blueprint</jobString>
		<displayPriority>1</displayPriority>

		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<requiredGiverWorkType>Crafting</requiredGiverWorkType>
		<workSkill>Crafting</workSkill>
		<workAmount>5000</workAmount>
		<skillRequirements>
			<Crafting>12</Crafting>
		</skillRequirements>
		<effectWorking>Craft</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<astra_blueprint>1</astra_blueprint>
		</products>

	</RecipeDef>



	<!-- ==================== Astra cubes (organic, non-organic, merged) ==================== -->

	<RecipeDef>
		<defName>astra_create_organic_cube</defName>
		<label>Create organic cube</label>
		<description>desc</description>
		<jobString>Creating organic cube</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<workAmount>400</workAmount>
		<skillRequirements>
			<Cooking>5</Cooking>
			<Crafting>5</Crafting>
		</skillRequirements>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Foods</li>
						<li>Corpses</li>
					</categories>
					<disallowedThingDefs>
						<li>astra_matter_organic</li>
						<li>astra_matter_non_organic</li>
						<li>astra_matter_merged</li>
					</disallowedThingDefs>
				</filter>
				<count>9</count>
			</li>
		</ingredients>
		<products>
			<astra_matter_organic>1</astra_matter_organic>
		</products>
		<workSkill>Cooking</workSkill>
		<displayPriority>1</displayPriority>

		<fixedIngredientFilter>
			<categories>
				<li>Foods</li>
				<li>Corpses</li>
			</categories>
			<disallowedThingDefs>
				<li>astra_matter_organic</li>
				<li>astra_matter_non_organic</li>
				<li>astra_matter_merged</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>

	</RecipeDef>

